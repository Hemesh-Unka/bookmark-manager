<%= styled_flash %>

<ul class='links-list'>
  <% @links.each do |link| %>
    <li>
      <a id="<%= link.id %>" href="<%= link.url %>">
       <%= link.title %>
      </a>

      <form action="/links/<%= link.id %>/delete" method="post">
        <button type='submit' name="id" value="<%= link.id %>">Delete</button>
      </form>
      <form action="/links/<%= link.id %>/edit" method="get">
        <button type='submit' name="id" value="<%= link.id %>">Update</button>
      </form>
    </li>
  <% end %>
</ul>

<form action="links/add" method="get">
  <button type="submit">Add Link</button>
</form>
